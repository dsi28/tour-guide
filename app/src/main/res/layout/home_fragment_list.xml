<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/beach_home_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_image_height"
        android:contentDescription="@string/barca"
        android:scaleType="fitXY"
        android:src="@drawable/barca_home_page"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/ten"
        android:paddingTop="@dimen/ten"
        android:text="@string/news"
        android:textAllCaps="true"
        android:textSize="@dimen/twentyfive_text"
        android:textStyle="bold" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_list_fragment_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginRight="@dimen/eight"/>
</LinearLayout>