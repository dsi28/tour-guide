<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_fragment_list_item"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/home_list_item_iv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_margin="8dp"
        android:src="@drawable/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/home_list_item_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_list_item_iv1"
        android:layout_toEndOf="@id/home_list_item_iv1"
        android:textSize="23sp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:text="Testing this yo"/>
    <TextView
        android:id="@+id/home_list_item_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_list_item_iv1"
        android:layout_below="@id/home_list_item_tv1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:textColor="#fff"
        android:text="ESPN NEWS"/>
</RelativeLayout>